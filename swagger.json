{
  "openapi": "3.0.0",
  "info": {
    "title": "Booking API",
    "description": "Reserve ticket for purchase",
    "version": "1.0.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "booking",
      "description": ""
    },
    {
      "name": "ticket",
      "description": ""
    }
  ],
  "servers": [],
  "components": {
    "securitySchemes": {
      "backendToken": {
        "scheme": "bearer",
        "bearerFormat": "token",
        "type": "http",
        "description": "Auth for bearer token",
        "in": "header"
      },
      "redisSessionCookie": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "apiKey",
        "description": "Auth for redis session",
        "in": "cookie",
        "name": "connect.sid"
      }
    },
    "schemas": {
      "BookingDTO": {
        "type": "object",
        "properties": {
          "city_id": {
            "type": "string",
            "description": "Id of city",
            "example": "588ababf2d029a6d15d0b5bf"
          },
          "time": {
            "type": "string",
            "description": "Time of movie",
            "example": "10:15"
          },
          "movie_id": {
            "type": "string",
            "description": "Id of movie",
            "example": "2"
          },
          "cinema": {
            "type": "string",
            "description": "Id of cinema",
            "example": "588ac3a02d029a6d15d0b5c4"
          },
          "totalPrice": {
            "type": "number",
            "description": "Total price of tickets",
            "example": "20.21"
          }
        },
        "required": [
          "city_id",
          "time",
          "movie_id",
          "cinema",
          "totalPrice"
        ]
      }
    }
  },
  "paths": {
    "/booking": {
      "post": {
        "operationId": "BookingController_bookTicket",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookingDTO"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": ""
          }
        },
        "tags": [
          "booking"
        ]
      }
    },
    "/ticket/{ticketId}": {
      "get": {
        "operationId": "TicketController_getTicketById",
        "parameters": [
          {
            "name": "ticketId",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "tags": [
          "ticket"
        ]
      }
    }
  }
}